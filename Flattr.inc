/**
 * Handle input from our sample page
 *
 * @package Flattr
 * @subpackage UserInterface
 *
 */
class FlattrController extends GalleryController {
    /**
     * @see GalleryController::handleRequest()
     */
    function handleRequest($form) {
	global $gallery;

	$itemId = GalleryUtilities::getRequestVariables('itemId');

	$redirect = array();
	$status = array();
	$error = array();
	if (isset($form['action']['save'])) {
          $ret = GalleryCoreApi::setPluginParameter('module', 'flattr', 'username', $form['flattrUsername']);
          if ($ret) {
            return array($ret, null);
          }

          /* I'd like to redirect to the view I came from... Is there a neater way to do that? */
          $redirect['view'] = 'core.SiteAdmin';
          $redirect['subView'] = 'flattr.Flattr';
          $status['added'] = 1;
	}

	$results['status'] = $status;
	$results['error'] = $error;
	$results['redirect'] = $redirect;

	return array(null, $results);
    }
}

/**
 * This is a sample page generated by the Gallery 2 module creator.
 *
 * @package Flattr
 * @subpackage UserInterface
 *
 */
class FlattrView extends GalleryView {

    /**
     * @see GalleryView::loadTemplate
     */
    function loadTemplate(&$template, &$form) {
	/* Load current username */
	$Flattr = array();
        list ($ret, $username) = GalleryCoreApi::getPluginParameter('module', 'flattr', 'username');
        if ($ret) {
          return array($ret, null);
        }
	$Flattr['username'] = $username;

	$template->setVariable('Flattr', $Flattr);

	return array(null, array('body' => 'modules/flattr/templates/Flattr.tpl'));
    }
}
